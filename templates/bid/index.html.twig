          {% block body %}
    <h1>Bid index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>BidAmount</th>
                <th>EntryDate</th>
                <th>EntryTime</th>
                <th>ProdID</th>
                <th>UserID</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bid in bids %}
            <tr>
                <td>{{ bid.id }}</td>
                <td>{{ bid.bidAmount }}</td>
                <td>{{ bid.entryDate ? bid.entryDate|date('Y-m-d') : '' }}</td>
                <td>{{ bid.entryTime ? bid.entryTime|date('H:i:s') : '' }}</td>
                <td>{{ bid.produit.id }}</td>
                <td>{{ bid.user.id }}</td>
                <td>{{ bid.type }}</td>
                <td>
                    <a href="{{ path('app_bid_show', {'id': bid.id}) }}">show</a>
                    <a href="{{ path('app_bid_edit', {'id': bid.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_bid_new') }}">Create new</a>
{% endblock %}


        
      
 
