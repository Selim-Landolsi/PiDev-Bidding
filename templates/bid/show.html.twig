{% extends 'back.html.twig' %}


{% block body %}
<!DOCTYPE html>

<title>Bid</title>
    <h1>Bid</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bid.id }}</td>
            </tr>
            <tr>
                <th>BidAmount</th>
                <td>{{ bid.bidAmount }}</td>
            </tr>
            <tr>
                <th>EntryDate</th>
