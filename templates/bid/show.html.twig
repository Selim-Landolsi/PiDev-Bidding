            </tr>
            <tr>
                <th>EntryTime</th>
                <td>{{ bid.entryTime ? bid.entryTime|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ProdID</th>
                <td>{{ bid.produit.id }}</td>
            </tr>
            <tr>
                <th>UserID</th>
